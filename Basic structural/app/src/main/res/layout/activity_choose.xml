<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Choose">

    <Button
        android:id="@+id/btnPatient"
        android:layout_width="334dp"
        android:layout_height="79dp"
        android:layout_marginTop="469dp"
        android:layout_marginBottom="13dp"
        android:text="Patient"
        app:layout_constraintBottom_toTopOf="@+id/btnCaretaker"
        app:layout_constraintEnd_toEndOf="@+id/btnCaretaker"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/btnCaretaker"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCaretaker"
        android:layout_width="337dp"
        android:layout_height="78dp"
        android:layout_marginStart="37dp"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="148dp"
        android:text="Caretaker"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPatient" />
</androidx.constraintlayout.widget.ConstraintLayout>