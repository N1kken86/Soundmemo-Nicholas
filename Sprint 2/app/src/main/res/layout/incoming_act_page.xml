<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".IncomingActivity">
<!--Text: Time for Task-->
    <TextView
        android:id="@+id/coming_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/time_for_task"
        android:textSize="30sp"
        android:textColor="@color/purple_700"
        android:layout_centerHorizontal="true"
        />
<!--    Task Image-->
    <ImageView
        android:layout_below="@id/coming_msg"
        android:id="@+id/image"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/drug"
        android:layout_centerHorizontal="true"
        />

<!--Show Activity -->
    <RelativeLayout
        android:id="@+id/show_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:layout_below="@id/image"
        android:paddingVertical="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="70dp">
<!--        Text: Activity-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity"
                android:textSize="18sp"/>
<!--            Activity detail-->
            <TextView
                android:id="@+id/activity_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Drug！Amoxycillin！"
                android:textSize="26sp"
                android:textColor="@color/black"/>
        </LinearLayout>
    </RelativeLayout>

<!--Show Tips-->
    <RelativeLayout
        android:id="@+id/show_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/show_activity"
        android:paddingVertical="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="70dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tips"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/tips_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 pills"
                android:textSize="26sp"
                android:textColor="@color/black"/>

        </LinearLayout>

    </RelativeLayout>

<!--Show Time-->
    <RelativeLayout
        android:id="@+id/show_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground"
        android:layout_below="@id/show_tips"
        android:paddingVertical="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="70dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/time"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/time_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8:35PM"
                android:textSize="26sp"
                android:textColor="@color/black"/>

        </LinearLayout>
    </RelativeLayout>

<!--Check Complete Button-->
    <ImageView
        android:id="@+id/button_task_complete"
        android:layout_width="120dp"
        android:layout_height="120dp"

        android:layout_below="@id/show_time"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_task_complete"
        android:gravity="center"
        android:padding="15dp"
        android:src="@drawable/ic_baseline_check_24" />

</RelativeLayout>
