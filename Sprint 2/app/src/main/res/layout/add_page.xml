    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="60dp"

        android:layout_marginTop="43dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="22dp"
        android:timePickerMode="spinner"
        app:layout_constraintBottom_toTopOf="@+id/Act_set"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Act_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="300dp"
        android:text="@string/Set_activity"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Tips_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="356dp"
        android:text="@string/Set_tips"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <!--        tools:ignore="MissingConstraints">-->


    <Button
        android:id="@+id/addDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="100dp"

        android:text="@string/Set_done"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Tips_set"
        app:layout_constraintTop_toBottomOf="@+id/Tips_set" />

    <Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="168dp"

        android:text="Back"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Tips_set"
        app:layout_constraintTop_toBottomOf="@+id/Tips_set" />

    <EditText
        android:id="@+id/text_activity"
        android:layout_width="200dp"
        android:layout_height="34dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="116dp"
        android:autofillHints="nothing"
        android:hint="@string/Enter_act"
        android:inputType="textAutoCorrect"
        android:paddingTop="0dp"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/Act_set"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Act_set"
        app:layout_constraintTop_toTopOf="@id/Act_set" />


    <EditText
        android:id="@+id/text_tips"
        android:layout_width="200dp"
        android:layout_height="34dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="116dp"
        android:autofillHints="nothing"
        android:hint="@string/Enter_tips"
        android:inputType="textAutoCorrect"
        android:paddingTop="0dp"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/Tips_set"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Tips_set"
        app:layout_constraintTop_toTopOf="@id/Tips_set" />

    <EditText
        android:id="@+id/duration1"
        android:layout_width="180dp"
        android:layout_height="34dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="96dp"
        android:autofillHints="nothing"
        android:hint="Enter duration"
        android:inputType="number"
        android:paddingTop="0dp"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/Tips_set"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Tips_set"
        app:layout_constraintTop_toTopOf="@id/Tips_set" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="404dp"
        android:text="Duration (in minutes): "
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>